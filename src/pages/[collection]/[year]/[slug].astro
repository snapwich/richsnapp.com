---
import { getCollection } from "astro:content";
import BlogPage from "~/layouts/BlogPage.astro";
import { parseSlugDate } from "~/utils/date";

export async function getStaticPaths() {
  const blogPosts = await getCollection("blog");
  const articlePosts = await getCollection("article");
  const combinedPosts = [...blogPosts, ...articlePosts];
  return combinedPosts.map((post) => {
    const { year, slug } = parseSlugDate(post.slug);
    return {
      params: {
        collection: post.collection,
        year,
        slug,
      },
      props: post,
    };
  });
}

const post = Astro.props;
const { Content } = await post.render();

const formattedDate = parseSlugDate(post.slug).formattedDate;
---

<BlogPage title={post.data.title} tags={post.data.tags} date={formattedDate}>
  <Content />
</BlogPage>
